{
  "name": "bsembed",
  "esy": {
    "build": "dune build -p #{self.name}"
  },
  "scripts": {
    "dev_release": "sh -c 'ln -s \"$(echo #{self.bin}/#{self.name})\" _release/#{self.name}.exe'",
    "clean": "dune clean",
    "bsembed": "bsembed --help"
  },
  "dependencies": {
    "@opam/js_of_ocaml-compiler": "3.5.1",
    "@opam/cmdliner": "^1.0.4",
    "@opam/dune": "*",
    "@esy-ocaml/reason": ">= 3.4.0 < 3.6.0",
    "ocaml": "~4.6.1000"
  },
  "devDependencies": {
    "@opam/merlin": "*",
    "ocaml": "~4.6.1000"
  }
}
